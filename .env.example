# - firstAlertDelayMinutes (currently 10 minutes)
# - secondAlertDelayHours (currently 1 hour)
# - sendRecoveryNotifications (currently false)

# Database Configuration
DB_PATH=./gpon.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400000
DATA_RETENTION_DAYS=30
